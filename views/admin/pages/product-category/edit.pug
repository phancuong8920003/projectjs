extends ../../layouts/default.pug
include ../../mixins/select-tree.pug

block main
    h1(class="mb-4") Chỉnh sửa danh mục sản phẩm

    form(
        action =`/admin/product-category/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type= "text"
                class="form-control"
                id="title"
                name="title"
                required
                value=data.title
            ) 
            div(class="form-group")
            label(for="parent_id") Danh mục cha
            select(
                name="parent_id"
                id="parent_id"
                class="form-control"
            )
                option(value="") -- Chọn danh mục cha--
                if(records)
                    +select-tree(records,1, data.parent_id)
        div(class="form-group")
            lable(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                row="5"
                ) #{data.description}
        
        div(class="form-group")
            label(for="thumbnail") Ảnh 
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                
            )
        div(class="form-group")
        label(for="positon") Vị trí
        input(
            type="number"
            class="form-control"
            id="position"
            name="position"
            placeholder="tự động tăng"
            min="1"
            value=data.position) 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(data.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-lable") Hoạt động 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked=(data.status == "inactive" ? true : false)
            ) 
            label(for="statusInActive" class="form-check-lable") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
