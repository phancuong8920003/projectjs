extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main
    .container.my-3 
        .row
            .col-12
                +box-head("Danh sách sản phẩm")
                

        .row
            each item in product
                .col-4.mb-3 
                    .product-item 
                        .inner-image
                            img(
                                src=item.thumbnail
                                 alt=item.title
                                 )
                        .inner-content
                            h3.inner-title 
                            a(href = `/product/${item.slug}`) #{item.title}
                            .inner-price-new 1000$
                            .inner-price-old #{item.price}$
                            .inner-discount #{item.discountPercentage}%